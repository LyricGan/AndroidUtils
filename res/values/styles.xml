<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="activity_theme_start" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="activity_theme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="default_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="default_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_default</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="default_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_default_selector</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="default_button_fill" parent="@style/default_button">
        <item name="android:layout_width">fill_parent</item>
    </style>
    
    <style name="default_button_shadow" parent="@style/default_button">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="default_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="default_edittext">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edit_border_bg_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:padding">@dimen/padding_normal</item>
    </style>
    
    <style name="default_edittext_comment" parent="@style/default_edittext">
        <item name="android:singleLine">false</item>
        <item name="android:minLines">3</item>
        <item name="android:gravity">top</item>
    </style>
    
    <style name="default_edittext_password" parent="@style/default_edittext">
        <item name="android:password">true</item>
        <item name="android:inputType">textPassword</item>
    </style>
    
    <style name="PopupWindowAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/base_slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/base_slide_bottom_out</item>
    </style>
    
    <style name="AddPictureDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowEnterAnimation">@anim/base_slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/base_slide_bottom_out</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_footer_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#55e4e4e4"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/iv_footer_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/image_loading_progress"
        android:contentDescription="@null"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_footer_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/list_footer_hint_normal"
        android:textColor="@color/text_default"
        android:textSize="16sp" />

</LinearLayout>
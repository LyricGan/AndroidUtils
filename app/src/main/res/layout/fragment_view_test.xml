<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.lyric.android.app.widget.chart.PieView
            android:id="@+id/pie_view"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.lyric.android.app.widget.MovedCircleView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.lyric.android.app.widget.TabDigitLayout
            android:id="@+id/tab_digit_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="截图"/>

        <ImageView
            android:id="@+id/image_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:contentDescription="@null"/>

        <com.lyric.android.app.widget.chart.ClashBar
            android:id="@+id/clash_bar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:clash_bar_left_color="@color/holo_blue_light"
            app:clash_bar_right_color="@color/holo_green_light"/>

        <Button
            android:id="@+id/btn_clash_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="刷新对阵图"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.lyric.android.app.widget.chart.RingProgressBar
                android:id="@+id/ring_progress_bar_1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:rpb_isShowText="true"
                app:rpb_ringProgressColor="@color/holo_red_light"
                app:rpb_ringWidth="8dp"
                app:rpb_smallTextColor="@color/holo_red_light"
                app:rpb_smallTextSize="12sp"
                app:rpb_textColor="@color/black"
                app:rpb_textSize="16sp"/>

            <com.lyric.android.app.widget.chart.RingProgressBar
                android:id="@+id/ring_progress_bar_2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginLeft="16dp"
                app:rpb_isShowText="false"
                app:rpb_ringProgressColor="@color/holo_red_light"
                app:rpb_ringWidth="8dp"
                app:rpb_smallTextColor="@color/holo_red_light"
                app:rpb_smallTextSize="12sp"
                app:rpb_textColor="@color/black"
                app:rpb_textSize="16sp"/>

            <com.lyric.android.app.widget.chart.RingProgressBar
                android:id="@+id/ring_progress_bar_3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginLeft="16dp"
                app:rpb_isShowText="true"
                app:rpb_ringProgressColor="@color/holo_red_light"
                app:rpb_ringWidth="8dp"
                app:rpb_smallTextColor="@color/holo_green_light"
                app:rpb_smallTextSize="12sp"
                app:rpb_textColor="@color/black"
                app:rpb_textSize="16sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_ring_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="刷新视图"/>

    </LinearLayout>

</ScrollView>